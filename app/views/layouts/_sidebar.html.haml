#main-menu.page-sidebar
  #main-menu-wrapper.page-sidebar-wrapper.scrollbar-dynamic
    .user-info-wrapper
      .profile-wrapper
        = get_user_avatar(current_user)
      .user-info
        .greeting
          مرحبا
        .username
          = current_user.username
        .status
          الحالة
          .status-icon.green
          متصل

    %p.menu-title
      الأقسام

    %ul
      %li.start
        = link_to root_path, "data-no-turbolink": true do
          = fa_icon "th-large"
          %span.title
            الرئيسية
      %li
        = link_to courses_path do
          = fa_icon "graduation-cap"
          %span.title الدورات
      %li
        = link_to articles_path do
          = fa_icon "pencil"
          %span.title المدونة
      %li
        = link_to "#" do
          = fa_icon "video-camera"
          %span.title مكتبة الفيديو
