#main-menu.page-sidebar
  #main-menu-wrapper.page-sidebar-wrapper.scrollbar-dynamic
    .user-info-wrapper
      .profile-wrapper
        = get_user_avatar(current_user, size="200x200")
      .user-info
        .greeting
          مرحبا
        .username
          = current_user.username
        .status
          الحالة
          .status-icon.green
          متصل

    %p.menu-title
      الأقسام

    %ul
      - if policy(User).index?
        %li.start{ class: "#{'active' if params[:controller] == 'users'}" }
          = link_to users_path  do
            = fa_icon "users"
            %span.title
              المستخدمين

      %li{ class: "#{'active' if %w(courses episodes).include?(params[:controller])}" }
        = link_to courses_path do
          = fa_icon "graduation-cap"
          %span.title الدورات

      %li{ class: "#{'active' if params[:controller] == 'articles'}" }
        = link_to articles_path do
          = fa_icon "pencil"
          %span.title المدونة
