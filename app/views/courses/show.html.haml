%p
  English Title:
  = @course.en_title
%p
  Arabic Title:
  = @course.ar_title
%p
  Description:
  = @course.description
%p
  Video Host:
  = @course.video_host
%p
  Video ID:
  = @course.video_id
%p
  Premium:
  = @course.premium
%p
  Active:
  = @course.active

%p
  = link_to "Courses", courses_path
  = link_to "Edit Course", edit_course_path(@course)
  = link_to "Delete Course", @course, method: :delete,
            data: { confirm: "Are you sure?" }

%p Episodes:
- @course.episodes.each do |episode|
  %p= link_to episode.en_title, course_episode_path(@course, episode)

= link_to "New Episode", new_course_episode_path(@course)
