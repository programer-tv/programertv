= disqus_script

.row
  .col-lg-12
    %ul.breadcrumb
      %li
        %p= @course.ar_title

.row
  .col-lg-8
    .grid.simple.transparent

    .grid.simple.horizontal.green
      .grid-title
        %h4
          %span.semi-bold= @course.ar_title
        .tools
          %a{ href: "javascript:;", class: "collapse" }
          %a{ href: "javascript:;", class: "reload" }
          %a{ href: "javascript:;", class: "remove" }
      .grid-body
        %p#course_description= @course.description.html_safe

    .grid.simple.horizontal.blue
      .grid-title
        %h4
          %span.semi-bold Comments
        .tools
          %a{ href: "javascript:;", class: "collapse" }
          %a{ href: "javascript:;", class: "reload" }
          %a{ href: "javascript:;", class: "remove" }
      .grid-body
        = disqus_comments

  .col-lg-4
    .grid.simple.horizontal.yellow
      .grid-title
        %h4
          %span.semi-bold Episodes
        .tools
          %a{ href: "javascript:;", class: "collapse" }
          %a{ href: "javascript:;", class: "reload" }
          %a{ href: "javascript:;", class: "remove" }
      .grid-body
        - @course.episodes.each do |episode|
          %p= link_to episode.ar_title, course_episode_path(@course, episode),
                      id: "#{dom_id(episode)}"

.row
  .col-lg-12
    .grid.simple.transparent
      = link_to new_course_episode_path(@course),
                class: "btn btn-success btn-cons" do
        = fa_icon "plus"
        %span &nbsp;Add Episode
      = link_to edit_course_path, class: "btn btn-warning btn-cons" do
        = fa_icon "pencil"
        %span &nbsp;Edit Course
      = link_to course_path, class: "btn btn-danger btn-cons",
                method: :delete,
                data: { "confirm": "Are you sure?",
                        "confirm-button-text": "Yes",
                        "cancel-button-text": "No",
                        "confirm-button-color": "#F35958" } do
        = fa_icon "trash-o"
        %span &nbsp;Delete Course
